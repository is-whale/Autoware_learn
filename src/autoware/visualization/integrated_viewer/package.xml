<?xml version="1.0"?>
<package>
    <name>integrated_viewer</name>
    <version>1.11.0</version>
    <description>The integrated_viewer package</description>

    <maintainer email="hirabayashi@ertl.jp">hirabayashi</maintainer>

    <license>Apache 2</license>

    <buildtool_depend>catkin</buildtool_depend>
    <buildtool_depend>autoware_build_flags</buildtool_depend>
    <build_depend>autoware_msgs</build_depend>
    <build_depend>std_msgs</build_depend>
    <build_depend>rviz</build_depend>
    <build_depend>qtbase5-dev</build_depend>
    <build_depend>cv_bridge</build_depend>
    <build_depend>image_transport</build_depend>
    <build_depend>roscpp</build_depend>
    <build_depend>sensor_msgs</build_depend>

    <run_depend>autoware_msgs</run_depend>
    <run_depend>std_msgs</run_depend>
    <run_depend>rviz</run_depend>
    <run_depend>libqt5-core</run_depend>
    <run_depend>libqt5-widgets</run_depend>
    <run_depend>cv_bridge</run_depend>
    <run_depend>image_transport</run_depend>
    <run_depend>roscpp</run_depend>
    <run_depend>sensor_msgs</run_depend>


    <!-- The export tag contains other, unspecified, tags -->
